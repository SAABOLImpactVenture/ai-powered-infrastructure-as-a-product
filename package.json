{
  "name": "ai-piap-backstage",
  "private": true,
  "version": "1.0.1",
  "description": "Backstage monorepo for AI-PIaP (app + backend + plugins)",
  "workspaces": [
    "packages/*",
    "plugins/*",
    "custom-actions/*"
  ],
  "scripts": {
    "build": "backstage-cli repo build --all",
    "build:backend": "yarn workspace backend build",
    "build:app": "yarn workspace app build",
    "dev": "backstage-cli dev",
    "start": "yarn workspace backend start",
    "start-backend": "yarn workspace backend start",
    "start-app": "yarn workspace app start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "test": "backstage-cli test",
    "clean": "backstage-cli repo clean",
    "prepack": "backstage-cli repo build"
  },
  "engines": {
    "node": ">=18.18.0",
    "yarn": ">=1.22.19"
  },
  "devDependencies": {
    "@backstage/cli": "^0.31.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "typescript": "^5.4.5"
  }
}