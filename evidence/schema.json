{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceRecord",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "OK",
        "ERROR"
      ]
    },
    "detail": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string"
    }
  },
  "required": [
    "kind",
    "status",
    "ts",
    "source"
  ]
}