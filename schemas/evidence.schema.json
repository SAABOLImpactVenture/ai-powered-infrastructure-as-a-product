{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence",
  "type": "object",
  "required": ["kind","status","timestamp","source","path"],
  "properties": {
    "kind": { "type": "string" },
    "status": { "type": "string", "enum": ["OK","WARN","FAIL"] },
    "timestamp": { "type": "string", "format": "date-time" },
    "source": { "type": "string" },
    "path": { "type": "string" },
    "details": { "type": "object" }
  },
  "additionalProperties": true
}
