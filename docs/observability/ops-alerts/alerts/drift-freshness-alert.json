{
  "type": "Microsoft.Insights/scheduledQueryRules",
  "apiVersion": "2023-12-01-preview",
  "location": "global",
  "properties": {
    "displayName": "IaaP - Drift Freshness (No Evidence in 2h)",
    "description": "Alert if no infra evidence arrives in the last 2 hours.",
    "severity": 3,
    "enabled": true,
    "evaluationFrequency": "PT15M",
    "scopes": [
      "/subscriptions/<your-sub-id>/resourceGroups/<rg>/providers/Microsoft.OperationalInsights/workspaces/<workspace-name>"
    ],
    "criteria": {
      "allOf": [
        { "query": "let window=2h; let cutoff=ago(window); let c=toscalar(IaapInfraEvidence_CL | where TimeGenerated > cutoff | count); c == 0", "timeAggregation": "Count", "operator": "GreaterThan", "threshold": 0 }
      ]
    },
    "autoMitigate": true,
    "muteActionsDuration": "PT30M",
    "actions": []
  }
}
