{
  "properties": {
    "displayName": "Require resource tags (owner, env, cost-center)",
    "policyType": "Custom",
    "mode": "All",
    "description": "Ensures required tags exist on all resources.",
    "metadata": {
      "category": "Tags"
    },
    "parameters": {
      "tagName": {
        "type": "Array",
        "metadata": {
          "displayName": "Required tags"
        },
        "defaultValue": [
          "owner",
          "env",
          "cost-center"
        ]
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "notEquals": ""
      },
      "then": {
        "effect": "modify",
        "details": {
          "operations": [
            {
              "operation": "addOrReplace",
              "field": "[concat('tags[', parameters('tagName')[copyIndex()], ']')]",
              "value": "TBD"
            }
          ],
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/fd1bd22b-8de9-4d87-a97f-3f7d4a3b8670"
          ],
          "copy": {
            "name": "tagCopy",
            "count": "[length(parameters('tagName'))]"
          }
        }
      }
    }
  }
}