{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductDefinition",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "cloud": {
      "type": "string",
      "enum": [
        "azure",
        "aws",
        "gcp",
        "oci"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z-.]+)?$"
    },
    "description": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean",
          "object",
          "array"
        ]
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean",
          "object",
          "array"
        ]
      }
    },
    "policies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "k8s_gatekeeper",
              "aws_config",
              "gcp_org_policy",
              "oci_iam"
            ]
          },
          "path": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          }
        },
        "required": [
          "id",
          "type",
          "path"
        ]
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "$ref": "evidence.v1.schema.json"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "name",
    "cloud",
    "version",
    "owner"
  ]
}